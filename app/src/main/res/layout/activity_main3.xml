<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main3Activity">

    <ImageView
            android:src="@drawable/house"
            android:layout_width="wrap_content"
            android:layout_height="488dp"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="296dp"
            android:layout_height="78dp"
            android:inputType="textPersonName"
            android:text="My favourite houe"
            android:ems="10"
            android:id="@+id/etMyText"
            android:hint="My favourite house"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="Next"
            android:layout_width="163dp"
            android:layout_height="79dp"
            android:id="@+id/btnNext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etMyText" android:layout_marginTop="76dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Prev"
            android:layout_width="173dp"
            android:layout_height="73dp"
            android:id="@+id/btnPrev"
            app:layout_constraintEnd_toStartOf="@+id/btnNext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etMyText" android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>